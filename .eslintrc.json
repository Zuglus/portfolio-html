// .eslintrc.json
{
  "env": {
    "browser": true,
    "es2022": true
  },
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": "warn",
    "no-console": "off",
    "prefer-const": "error",
    "no-var": "error",
    "arrow-spacing": "error",
    "object-curly-spacing": ["error", "always"],
    "indent": ["error", 4],
    "quotes": ["error", "single"],
    "semi": ["error", "always"]
  },
  "globals": {
    "PortfolioApp": "readonly"
  }
}

