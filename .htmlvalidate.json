// .htmlvalidate.json
{
  "extends": ["html-validate:recommended"],
  "rules": {
    "close-order": "error",
    "void-content": "error",
    "void-style": ["error", "omit"],
    "class-pattern": ["error", {
      "pattern": "kebabcase"
    }],
    "id-pattern": ["error", {
      "pattern": "kebabcase"
    }],
    "require-sri": "off",
    "no-inline-style": "warn"
  },
  "elements": [
    "html5"
  ]
}